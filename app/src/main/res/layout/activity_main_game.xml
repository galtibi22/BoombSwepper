<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Menu"
    android:background="#d4e3fc">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true">

        <TextView
            android:text="WINNERS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="#0D58CD"
            android:textStyle="normal|bold" />

        <TableLayout
            android:id="@+id/score_table_layout"
            android:stretchColumns="*"
            android:background="#000000"
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            >

            <TableRow
                android:background="#0D58CD"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp">
                <TextView
                    android:text="Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/table_score_name_tit"
                    android:textSize="20sp"
                    android:textStyle="normal|bold"
                    android:textAlignment="center" />

                <TextView
                    android:text="Level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView"
                    android:textSize="20sp"
                    android:textStyle="normal|bold"
                    android:textAlignment="center" />

                <TextView
                    android:text="Time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/table_score_time_tit"
                    android:textSize="20sp"
                    android:textStyle="normal|bold"
                    android:textAlignment="center" />

            </TableRow>

        </TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical" >

        <Button
            android:text="EASY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_easy"
            android:onClick="initGameTable"
            android:background="#C1D0E9"
            />

        <Button
            android:text="MEDIUM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_medium"
            android:onClick="initGameTable"
            android:background="#76ABF9"/>

        <Button
            android:text="HARD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_hard"
            android:onClick="initGameTable"
            android:background="#0D58CD"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>

